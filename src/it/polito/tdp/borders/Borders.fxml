<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.borders.BordersController">
   <top>
      <Label text="Country Borders" BorderPane.alignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Label prefWidth="60.0" text="Anno:">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="txtAnno" alignment="TOP_LEFT" prefWidth="150.0" />
                  <Button mnemonicParsing="false" onAction="#doCalcolaConfini" text="Calcola confini">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin></Button>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Stato: ">
                     <HBox.margin>
                        <Insets left="10.0" top="23.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="comboBox">
                     <HBox.margin>
                        <Insets bottom="20.0" left="24.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Button fx:id="btnCercaStatiConfinanti" mnemonicParsing="false" onAction="#doCercaStatiConfinanti" text="Cerca Stati confinanti">
                     <HBox.margin>
                        <Insets left="5.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="txtResult" editable="false" wrapText="true">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></TextArea>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
